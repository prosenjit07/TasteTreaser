<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#BAE7ED"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name_det"
            android:layout_width="355dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="62px"
            android:layout_marginTop="77dp"
            android:text="Plate:"
            android:textAlignment="center"
            android:textColor="#755C14"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_det"
            android:layout_marginStart="28dp"
            android:layout_marginTop="66dp"
            android:text="Ingredients: "
            android:textColor="#D5AD36"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ing_det"
            android:layout_marginStart="28dp"
            android:layout_marginTop="34dp"
            android:text="Description:"
            android:textColor="#D5AD36"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/ing_det"
            android:layout_width="346dp"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="1sp"/>

        <TextView
            android:id="@+id/des_det"
            android:layout_width="342dp"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="28dp"
            android:layout_marginTop="31dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="1sp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_det"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="36dp"
            android:clickable="true"
            app:backgroundTint="#D5AD36"
            app:srcCompat="@drawable/baseline_edit_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_det"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="17dp"
            android:layout_toStartOf="@+id/edit"
            android:clickable="true"
            app:backgroundTint="#D5AD36"
            app:srcCompat="@drawable/baseline_delete_24" />

    </RelativeLayout>

</ScrollView>